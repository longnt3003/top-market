@{
    ViewBag.Title = "Checkout";
}

<style>
    .error {
        color: red;
    }
</style>

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css" />
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css" />

<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">
            <!-- Breadcrumbs -->
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/home">Home</a></li>
                    <li class="active">
                        <a href="/shoppingcart"><i class="fa fa-angle-right"></i> Cart</a>
                    </li>
                </ul>
            </div>

            <!-- Main Content -->
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1>Checkout</h1>
                    <p>Please double check your order information to avoid errors!</p>
                </div>
            </div>
            <hr />

            @if (ViewBag.CheckCart != null) {
                <div class="row">
                    <div id="show_success"></div>
                    <div class="col-md-9">
                        @Html.Action("Partial_CheckOut", "ShoppingCart")
                    </div>
                    <div class="col-md-3">
                        @Html.Action("Partial_Item_Checkout", "ShoppingCart")
                    </div>
                </div>
            } else {
                <div class="alert alert-warning">
                    Cart is empty. Back to <a href="/product">Product</a> for shopping.
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Content/assets/js/categories_custom.js"></script>
    <script>
        function OnFailure(rs) {
            if (!rs.Success) {
                $('#show_success').html("<div class='alert alert-danger'>Order failed! Please try again.</div>");
            }
        }

        $(document).ready(function () {
            // Toggle payment form
            $('body').on('change', '#drTypePayment', function () {
                var type = $(this).val();
                $('#load_form_payment').toggle(type === "2");
            });

            // Form validation
            $('#myForm').validate({
                rules: {
                    CustomerName: { required: true },
                    Phone: { required: true },
                    Address: { required: true },
                    Email: { required: true, email: true }
                },
                messages: {
                    CustomerName: 'This field cannot be blank',
                    Phone: 'This field cannot be blank',
                    Address: 'This field cannot be blank',
                    Email: 'Invalid email'
                },
                errorClass: "error",
                errorElement: "span"
            });
        });
    </script>
}
