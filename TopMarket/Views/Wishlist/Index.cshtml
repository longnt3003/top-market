@model PagedList.PagedList<TopMarket.Models.EntityFramework.Wishlist>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Favorite Products | TopMarket";
}

<link href="~/Content/PagedList.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css" />
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/contact_styles.css" />
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/contact_responsive.css" />

<style>
    .news_section_container {
        margin-top: 180px;
    }
    .row-item-new {
        margin-bottom: 20px;
    }
    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }
    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>

<div class="container contact_container">
    <div class="row">
        <div class="col">
            <!-- Breadcrumbs -->
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/home">Home</a></li>
                    <li class="active">
                        <a href="#"><i class="fa fa-angle-right"></i> Favorite</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <h2 class="text-center">Favorite Products</h2>
    <br /><br /><br />

    @if (Model != null && Model.Any()) {
        foreach (var item in Model) {
            <div class="row row-item-new">
                <div class="col-md-3">
                    <div class="img-box">
                        <a href="/product-detail/@item.Product.Alias-p@(item.Product.Id)" title="@item.Product.Title">
                            <img src="@item.Product.Image" alt="@item.Product.Title" />
                        </a>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="content-box">
                        <h3>
                            <a href="/product-detail/@item.Product.Alias-p@(item.Product.Id)" title="@item.Product.Title">
                                @item.Product.Title
                            </a>
                        </h3>
                        <div class="description-box">
                            @Html.Raw(item.Product.Description)
                        </div>
                    </div>
                </div>
                <div class="col-md-1 text-right">
                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </div>
            </div>
        }

        <!-- Pagination -->
        <div class="row">
            <div class="col-12 text-right">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    } else {
        <div class="alert alert-warning text-center">
            You have no favorite products yet.
        </div>
    }
</div>
