@model IEnumerable<TopMarket.Models.EntityFramework.OrderDetail>

@if (Model != null && Model.Any()) {
    var i = 1;
    decimal grandTotal = 0;

    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>#</th>
                <th>Product Name</th>
                <th class="text-right">Price</th>
                <th class="text-center">Quantity</th>
                <th class="text-right">Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                var totalPrice = item.Price * item.Quantity;
                grandTotal += totalPrice;

                <tr>
                    <td>@i</td>
                    <td>@item.Product.Title</td>
                    <td class="text-right">@TopMarket.Common.Common.FormatNumber(item.Price, 0)</td>
                    <td class="text-center">@item.Quantity</td>
                    <td class="text-right">@TopMarket.Common.Common.FormatNumber(totalPrice, 0)</td>
                </tr>
                i++;
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-right font-weight-bold">Grand Total</td>
                <td class="text-right font-weight-bold">
                    @TopMarket.Common.Common.FormatNumber(grandTotal, 0)
                </td>
            </tr>
        </tfoot>
    </table>
} else {
    <div class="alert alert-info text-center">
        No order details available.
    </div>
}
