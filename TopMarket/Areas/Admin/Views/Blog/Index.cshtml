@model PagedList.PagedList<TopMarket.Models.EntityFramework.Blog>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Blog Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                <i class="fas fa-bars"></i>
            </a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/blog" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="card-title">Blog List</h3>
            <div class="card-tools">
                <a href="/admin/blog/add" class="btn btn-primary">Add</a>
                <button type="button" class="btn btn-danger" id="btnDeleteAll">Delete All</button>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-6">
                    @using (Html.BeginForm("Index", "Blog", FormMethod.Get))
                    {
                        <div class="input-group input-group-sm">
                            @Html.TextBox("Searchtext", null, new { @class = "form-control", @placeholder = "Search blog..." })
                            <span class="input-group-append">
                                <button type="submit" class="btn btn-info btn-flat">Search</button>
                            </span>
                        </div>
                    }
                </div>
            </div>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAll" /></th>
                        <th>#</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Date Created</th>
                        <th>Status</th>
                        <th style="width:150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any()) {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model) {
                            var strCheck = item.IsActive ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            <tr id="trow_@item.Id">
                                <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                <td>@i</td>
                                <td><img src="@item.Image" width="50" alt="Blog image" /></td>
                                <td>@item.Title</td>
                                <td>@item.DateCreated.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a href="#" data-id="@item.Id" class="btnActive">@Html.Raw(strCheck)</a>
                                </td>
                                <td>
                                    <a href="/admin/blog/edit/@item.Id" class="btn btn-sm btn-primary">Edit</a>
                                    <button type="button" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Delete</button>
                                </td>
                            </tr>
                            i++;
                        }
                    } else {
                        <tr>
                            <td colspan="7" class="text-center text-muted">No blogs found</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-6 text-center">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
        <div class="card-footer"></div>
    </div>
</section>

@section scripts{
    <script>
        $(function () {
            // Select all checkboxes
            $('#selectAll').on('change', function () {
                var checkStatus = this.checked;
                $('.cbkItem').prop('checked', checkStatus);
            });

            // Delete all selected
            $('#btnDeleteAll').on('click', function (e) {
                e.preventDefault();
                var ids = $('.cbkItem:checked').map(function () { return $(this).val(); }).get().join(',');
                if (ids.length > 0 && confirm('Are you sure you want to delete selected records?')) {
                    $.post('/admin/blog/deleteAll', { ids: ids }, function (rs) {
                        if (rs.success) location.reload();
                    });
                }
            });

            // Delete single item
            $('.btnDelete').on('click', function () {
                var id = $(this).data("id");
                if (confirm('Are you sure you want to delete this record?')) {
                    $.post('/admin/blog/delete', { id: id }, function (rs) {
                        if (rs.success) {
                            $('#trow_' + id).remove();
                        }
                    });
                }
            });

            // Toggle active status
            $('.btnActive').on('click', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = btn.data("id");
                $.post('/admin/blog/IsActive', { id: id }, function (rs) {
                    if (rs.success) {
                        btn.html(rs.isAct ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>");
                    }
                });
            });
        });
    </script>
}
