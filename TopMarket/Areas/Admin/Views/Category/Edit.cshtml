@model TopMarket.Models.EntityFramework.Category
@{
    ViewBag.Title = "Edit Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                <i class="fas fa-bars"></i>
            </a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">Category Management</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category/edit" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit Category</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Category Information</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "Category", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
                    @Html.HiddenFor(x => x.Id)

                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="Title">Category Name</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Category Name", @id = "Title" })
                            @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="Alias">Alias</label>
                            @Html.TextBoxFor(x => x.Alias, new { @class = "form-control", @id = "Alias" })
                            @Html.ValidationMessageFor(x => x.Alias, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="Link">Link</label>
                            @Html.TextBoxFor(x => x.Link, new { @class = "form-control", @id = "Link" })
                            @Html.ValidationMessageFor(x => x.Link, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="Description">Description</label>
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @id = "Description" })
                        </div>

                        <div class="form-group">
                            <label for="Position">Position</label>
                            @Html.TextBoxFor(x => x.Position, new { @class = "form-control", @id = "Position" })
                        </div>

                        <div class="form-group">
                            <a href="/admin/category" class="btn btn-danger">Back</a>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="card-footer"></div>
    </div>
</section>

@section scripts{
    <script src="~/Scripts/jsConvert.js"></script>
}
