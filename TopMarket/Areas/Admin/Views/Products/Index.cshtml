@model PagedList.PagedList<TopMarket.Models.EntityFramework.Product>
@using PagedList.Mvc
@{
    ViewBag.Title = "Product Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader {
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                <i class="fas fa-bars"></i>
            </a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/product" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>
            <div class="card-tools">
                <a href="/admin/product/add" class="btn btn-primary">Add New</a>
                <a href="#" class="btn btn-danger" id="BtnDeleteAll">Delete All</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="SelectAll" /></th>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Date Created</th>
                        <th>Home</th>
                        <th>On Sale</th>
                        <th>Active</th>
                        <th style="width:150px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any()) {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model) {
                            var strCheck = item.IsActive ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            var strCheckHome = item.IsHome ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            var strCheckSale = item.IsSale ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            var strImg = item.ProductImages.FirstOrDefault(x => x.IsDefault)?.Image ?? "";

                            <tr id="trow_@item.Id">
                                <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                <td>@i</td>
                                <td><img class="imgproduct" data-id="@item.Id" src="@strImg" width="50" /></td>
                                <td>@item.Title</td>
                                <td>@item.ProductCategory.Title</td>
                                <td>@item.Quantity</td>
                                <td>@TopMarket.Common.Common.FormatNumber(item.Price, 0)</td>
                                <td>@item.DateCreated.ToString("dd/MM/yyyy")</td>
                                <td class="text-center"><a href="#" data-id="@item.Id" class="btnHome">@Html.Raw(strCheckHome)</a></td>
                                <td class="text-center"><a href="#" data-id="@item.Id" class="btnSale">@Html.Raw(strCheckSale)</a></td>
                                <td class="text-center"><a href="#" data-id="@item.Id" class="btnActive">@Html.Raw(strCheck)</a></td>
                                <td>
                                    <a href="/admin/product/edit/@item.Id" class="btn btn-sm btn-primary">Edit</a>
                                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Delete</a>
                                </td>
                            </tr>
                            i++;
                        }
                    } else {
                        <tr>
                            <td colspan="12" class="text-center text-muted">No products available.</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="row">
                <div class="col-6"></div>
                <div class="col-6 text-right">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <small class="text-muted">&copy; @DateTime.Now.Year TopMarket | Admin Panel</small>
        </div>
    </div>
</section>
<div id="dialog">
    <iframe id="myIframe" style="border:0; width:100%; height:100%;"></iframe>
</div>

@section scripts {
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <script>
        $(function () {
            // Image upload dialog
            $("#dialog").dialog({
                autoOpen: false,
                show: "fade",
                hide: "fade",
                modal: true,
                height: 600,
                width: 700,
                resizable: true,
                title: "Image Management",
                close: function () {
                    window.location.reload();
                }
            });

            // Open image management
            $("body").on("click", ".imgproduct", function () {
                var proid = $(this).data("id");
                $("#myIframe").attr("src", "/admin/productimage/index?id=" + proid);
                $("#dialog").dialog("open");
                return false;
            });

            // Delete all selected
            $("body").on("click", "#BtnDeleteAll", function (e) {
                e.preventDefault();
                var ids = [];
                $(this).closest(".card").find("tr td input:checkbox:checked").each(function () {
                    ids.push($(this).val());
                });
                if (ids.length > 0 && confirm("Are you sure you want to delete these?")) {
                    $.post("/admin/product/deleteAll", { ids: ids.join(",") }, function (rs) {
                        if (rs.success) location.reload();
                    });
                }
            });

            // Select all
            $("body").on("change", "#SelectAll", function () {
                var checkStatus = this.checked;
                $(this).closest(".card-body").find("tr td input:checkbox").prop("checked", checkStatus);
            });

            // Delete single
            $("body").on("click", ".btnDelete", function () {
                var id = $(this).data("id");
                if (confirm("Are you sure you want to delete this?")) {
                    $.post("/admin/product/delete", { id: id }, function (rs) {
                        if (rs.success) {
                            $("#trow_" + id).remove();
                        }
                    });
                }
            });

            // Toggle Home
            $("body").on("click", ".btnHome", function (e) {
                e.preventDefault();
                var btn = $(this), id = btn.data("id");
                $.post("/admin/product/isHome", { id: id }, function (rs) {
                    if (rs.success) {
                        btn.html(rs.isHome ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>");
                    }
                });
            });

            // Toggle Sale
            $("body").on("click", ".btnSale", function (e) {
                e.preventDefault();
                var btn = $(this), id = btn.data("id");
                $.post("/admin/product/isSale", { id: id }, function (rs) {
                    if (rs.success) {
                        btn.html(rs.isSale ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>");
                    }
                });
            });

            // Toggle Active
            $("body").on("click", ".btnActive", function (e) {
                e.preventDefault();
                var btn = $(this), id = btn.data("id");
                $.post("/admin/product/isActive", { id: id }, function (rs) {
                    if (rs.success) {
                        btn.html(rs.isActive ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>");
                    }
                });
            });
        });
    </script>
}

}