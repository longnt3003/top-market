@{
    ViewBag.Title = "Admin Homepage";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Admin Homepage</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
                    <li class="breadcrumb-item active">Admin</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="card-title">Admin Dashboard</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <p>
                Welcome to the Admin Dashboard. This is the central hub where you can manage categories,
                products, blogs, accounts, and system settings. Use the navigation menu to access each
                management section.
            </p>
            <p>
                Quick tips:
                <ul>
                    <li>Use the sidebar to navigate between modules.</li>
                </ul>
            </p>
        </div>
        <div class="card-footer text-center">
            <small class="text-muted">
                &copy; @DateTime.Now.Year TopMarket | Admin Panel
            </small>
        </div>
    </div>
</section>
