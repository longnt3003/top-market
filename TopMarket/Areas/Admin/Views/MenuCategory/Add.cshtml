@model TopMarket.Models.EntityFramework.MenuCategory
@{
	ViewBag.Title = "Add Category";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader {
	<ul class="navbar-nav">
		<li class="nav-item">
			<a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
		</li>
		<li class="nav-item d-none d-sm-inline-block">
			<a href="/admin/home" class="nav-link">Home</a>
		</li>
		<li class="nav-item d-none d-sm-inline-block">
			<a href="/admin/menucategory" class="nav-link">Category Management</a>
		</li>
		<li class="nav-item d-none d-sm-inline-block">
			<a href="/admin/menucategory/add" class="nav-link">Add Category</a>
		</li>
	</ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Add Category</h1>
			</div>
		</div>
	</div>
</section>

<!-- Main content -->
<section class="content">
	<div class="card">
		<div class="card-header">
			<h3 class="card-title">New Category Information</h3>
		</div>
		<div class="card-body">
			<div class="bs-stepper-content">
				@using (Html.BeginForm("Add", "MenuCategory", FormMethod.Post, new { }))
				{
					@Html.AntiForgeryToken()
					@Html.ValidationSummary(true)

					<div id="logins-part" class="content active dstepper-block" role="tabpanel">
						<div class="form-group">
							<label>Category Name</label>
							@Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Category Name" })
							@Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
						</div>
						<div class="form-group">
							<label>Alias</label>
							@Html.TextBoxFor(x => x.Alias, new { @class = "form-control" })
							@Html.ValidationMessageFor(x => x.Alias, null, new { @class = "text-danger" })
						</div>
						<div class="form-group">
							<label>Link</label>
							@Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
							@Html.ValidationMessageFor(x => x.Link, null, new { @class = "text-danger" })
						</div>
						<div class="form-group">
							<label>Description</label>
							@Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
						</div>
						<div class="form-group">
							<label>Position</label>
							@Html.TextBoxFor(x => x.Position, new { @class = "form-control", @Value = "1" })
						</div>
						<div class="form-group">
							<a href="/admin/menucategory" class="btn btn-danger">Back</a>
							<button type="submit" class="btn btn-primary">Save</button>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</section>

@section scripts {
	<script src="~/Scripts/jsConvert.js"></script>
}
