@model TopMarket.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Phone Number";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title</h2>

    @using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        <h4>Add a phone number</h4>
        <hr />
        @Html.ValidationSummary(string.Empty, new { @class = "text-danger" })

        <div class="row mb-3">
            @Html.LabelFor(m => m.Number, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Number, string.Empty, new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="offset-md-2 col-md-10">
                <input type="submit" class="btn btn-outline-dark" value="Submit" />
            </div>
        </div>
    }
</main>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
