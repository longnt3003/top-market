@model PagedList.IPagedList<TopMarket.Models.EntityFramework.Order>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Order List";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                <i class="fas fa-bars"></i>
            </a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/order" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Order Management</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Order List</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Order ID</th>
                        <th>Customer Name</th>
                        <th>Phone</th>
                        <th>Grand Total</th>
                        <th>Payment Method</th>
                        <th>Status</th>
                        <th>Date Created</th>
                        <th style="width:150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any()) {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model) {
                            <tr id="trow_@item.Id">
                                <td>@i</td>
                                <td>@item.Code</td>
                                <td>@item.CustomerName</td>
                                <td>@item.Phone</td>
                                <td>@TopMarket.Common.Common.FormatNumber(item.TotalAmmount, 0)</td>
                                <td>@(item.PaymentMethods == 1 ? "COD" : "Transfer")</td>
                                <td>
                                    @if (item.Status == 1) {
                                        <span class="badge badge-warning">Unpaid</span>
                                    } else if (item.Status == 2) {
                                        <span class="badge badge-info">Paid</span>
                                    } else if (item.Status == 3) {
                                        <span class="badge badge-success">Complete</span>
                                    } else if (item.Status == 4) {
                                        <span class="badge badge-danger">Cancel</span>
                                    }
                                </td>
                                <td>@item.DateCreated.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a href="/admin/order/view/@item.Id" class="btn btn-sm btn-success">View</a>
                                    <button type="button" class="btn btn-sm btn-danger btnUpdatee" data-id="@item.Id">Update</button>
                                </td>
                            </tr>
                            i++;
                        }
                    } else {
                        <tr>
                            <td colspan="9" class="text-center text-muted">No orders found</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="row">
                <div class="col-6"></div>
                <div class="col-6 text-right">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
        <div class="card-footer"></div>
    </div>
</section>

<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Update Status</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="txtOrderId" value="0" />
                <div class="form-group">
                    <label for="ddStatus">Status</label>
                    <select class="form-control" id="ddStatus">
                        <option value="2">Paid</option>
                        <option value="3">Complete</option>
                        <option value="4">Cancel</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnSave">Save</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            $('body').on('click', '.btnUpdatee', function () {
                var id = $(this).data("id");
                $('#txtOrderId').val(id);
                $('#modal-default').modal('show');
            });

            $('body').on('click', '#btnSave', function () {
                var id = $('#txtOrderId').val();
                var status = $('#ddStatus').val();
                $.ajax({
                    url: '/admin/order/UpdateStatus',
                    type: 'POST',
                    data: { id: id, status: status },
                    success: function (res) {
                        if (res.Success) {
                            location.reload();
                        }
                    }
                });
            });
        });
    </script>
}
